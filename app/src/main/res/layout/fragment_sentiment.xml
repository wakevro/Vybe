<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sentiment.SentimentFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ltMusic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/music"
            app:lottie_autoPlay="true"
            app:lottie_repeatMode="reverse"
            app:lottie_loop="true"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/etUserMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="208dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/text_input"
                android:ems="15"
                android:hint="@string/how_are_you_feeling"
                android:inputType="textPersonName"
                android:maxLines="3"
                android:minHeight="48dp"
                android:padding="20dp"
                android:textColor="@android:color/black"


                android:textColorHint="#4E4C4C"

                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:autofillHints="" />

            <Button
                android:id="@+id/btnMood"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="28dp"
                android:text="@string/go"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/etUserMood"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintStart_toStartOf="@id/etUserMood"
                app:layout_constraintTop_toBottomOf="@+id/etUserMood" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>